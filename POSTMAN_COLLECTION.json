{
  "info": {
    "name": "SkyHigh Core API Collection",
    "_postman_id": "skyhigh-core-collection",
    "description": "Postman collection for SkyHigh Core Digital Check-In System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Hold Seat",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/hold?seatNumber=1A&passengerId=P100",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "hold"
          ],
          "query": [
            {
              "key": "seatNumber",
              "value": "1A"
            },
            {
              "key": "passengerId",
              "value": "P100"
            }
          ]
        }
      }
    },
    {
      "name": "Confirm Seat",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/confirm?seatNumber=1A&passengerId=P100",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "confirm"
          ],
          "query": [
            {
              "key": "seatNumber",
              "value": "1A"
            },
            {
              "key": "passengerId",
              "value": "P100"
            }
          ]
        }
      }
    },
    {
      "name": "Get Seat Map",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/seats",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "seats"
          ]
        }
      }
    },
    {
      "name": "Baggage Validation",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/baggage?weight=30",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "baggage"
          ],
          "query": [
            {
              "key": "weight",
              "value": "30"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ]
}
